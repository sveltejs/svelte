{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{
			"files": ["*.svelte"],
			"options": {
				"bracketSameLine": false
			}
		},
		{
			"files": ["README.md", "packages/*/README.md", "**/package.json"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
