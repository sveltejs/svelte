{
    "compilerOptions": {
        "target": "ES6",
        "diagnostics": true,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "allowJs": true,
        "lib": ["es5", "es6", "dom"],
        "importHelpers": true,
        "moduleResolution": "node",
				"baseUrl": ".",
				"paths": {
						"svelte/*": ["./src/*"]
				}
    },
    "include": [
        "src"
    ],
    "exclude": [
			  "./*.*js",
        "node_modules"
    ]
}
